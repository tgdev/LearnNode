extends layout

include mixins/_storeCard

block content
  .inner
    h2= title
    
    p= h.dump(tag)
    
    ul.tags
      li.tag
        a.tag__link(href=`/tags` class=(tag === undefined ? 'tag__link--active' : ''))
          span.tag__text All
          span.tag__count= stores.length
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
            span.tag__text= t._id
            span.tag__count= t.count
            
    .stores
      each store in stores
          +storeCard(store)
